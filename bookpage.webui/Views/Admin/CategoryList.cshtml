@model CategoryListViewModel

<div class="row">
    <div class="col-md-12">
       <h1>Admin Products</h1>
       <hr>
            <a href="/admin/categories/create" class="btn btn-primary btn-sm">Add Category</a>
          <table class="table table-bordered">
              <thead>@*başlıklar*@
                  <tr>
                      <td>Id</td>
                      <td>Name</td>
                      <td>Erişim</td>
                  </tr>
              </thead>
              <tbody>@*içerikler*@
                  @if(Model.Categories.Count>0)//ürün varsa gel foreachı çalıştır
                  {
                        @foreach (var item in Model.Categories)//her ürüne göre oluşacak
                        {
                            <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>

                            <td>
                                <a href="/admin/categories/@item.CategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>
                               
                               <form action="/admin/DeleteFromCategory" method="post" style="display: inline;">
                                  <input type="hidden" name="CategoryId" value="@item.CategoryId">
                                  <button type="submit" class="btn btn-danger btn-sm mr-2">Delete</button>
                               </form>
                            </td>
                        </tr>
                      }
                  }
                  else @*eğer yoksa*@
                  {
                      <div class="alert alert-warning" role="alert">
                        <h3>Kategori Yok</h3>
                      </div>

                  }
              </tbody>
          </table>

    </div>
</div>